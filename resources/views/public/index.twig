{% extends 'templates/app.twig' %}

{% block content %}
    {% if posts is empty %}
        <div class="alert alert-info">No posts found.</div>
    {% else %}

        <div class="row">
            {% for post in posts %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-50">
                        {% if post.image_path is defined and post.image_path %}
                            <img src="{{ post.image_path }}" class="card-img-top" alt="{{ post.title }}">
                        {% endif %}
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ post.title }}</h5>
                            <p class="card-text text-truncate">{{ post.content|striptags|slice(0, 150) ~ '...'}}</p>
                            <p class="text-muted mt-auto mb-0-small">
                                Published on {{ post.created_at|date("Y-m-d") }}
                            </p>
                            <a href="/posts/{{ post.id }}" class="btn btn-primary mt-2">Read More</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    {% endif %}

{% endblock %}